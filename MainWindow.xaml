<Window x:Class="RegistryApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registry App" Height="350" Width="525">
    <Grid>
        <DataGrid Name="DataGridRegistry" AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single" SelectionUnit="FullRow">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Name="BtnQuery" Content="Query Registry" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="120" Margin="10" Click="BtnQuery_Click"/>
        <Button Name="BtnExport" Content="Export Selected" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="120" Margin="10" Click="BtnExport_Click"/>
    </Grid>
</Window>