<Window x:Class="RegistryApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registry App" Height="350" Width="525">
    <Grid>
        <DataGrid Name="DataGridRegistry" AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single" SelectionUnit="FullRow">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="10">
            <Button Name="BtnQuery1" Content="Query Key 1" Width="120" Margin="0,0,10,0" Click="BtnQuery1_Click"/>
            <Button Name="BtnQuery2" Content="Query Key 2" Width="120" Margin="0,0,10,0" Click="BtnQuery2_Click"/>
            <Button Name="BtnQuery3" Content="Query Key 3" Width="120" Click="BtnQuery3_Click"/>
        </StackPanel>
        <Button Name="BtnExport" Content="Export Selected" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="120" Margin="10" Click="BtnExport_Click"/>
    </Grid>
</Window>