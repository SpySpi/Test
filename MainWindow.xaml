<Window x:Class="RegistryApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registry App" Height="350" Width="525">
    <Grid>
        <DataGrid Name="DataGridRegistry" AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single" SelectionUnit="FullRow">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Name="Button1" Content="Query Guest Key" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="120" Margin="10,10,0,0" Click="Button1_Click"/>
        <Button Name="Button2" Content="Query Key 1" VerticalAlignment="Bottom" HorizontalAlignment="Center" Width="120" Margin="0,10,0,0" Click="Button2_Click"/>
        <Button Name="Button3" Content="Query Steam Key" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="120" Margin="0,10,10,0" Click="Button3_Click"/>
    </Grid>
</Window>